{
	"name": "Coding Notifier",
	"version": "1.0.0",
	"description": "Displays your Coding.net notifications unread count",
	"manifest_version": 2,
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	"permissions": [
		"alarms",
		"activeTab",
		"https://coding.net/"
	],
	"optional_permissions": [
		"*://*/"
	],
	"background": {
		"persistent": false,
		"scripts": [
			"api.js",
			"main.js"
		]
	},
	"browser_action": {
		"default_icon": {
			"19": "icon-19.png",
			"38": "icon-38.png"
		}
	}
}
